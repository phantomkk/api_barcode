<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    >
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="5dp"
    android:id="@+id/img_category_item_category"
    android:src="@drawable/ic_card_travel_black_24dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name_item_category"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/img_category_item_category"
        android:layout_alignBottom="@id/img_category_item_category"
        android:layout_toEndOf="@id/img_category_item_category"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_grey_100"
        android:layout_below="@id/img_category_item_category"

        />
</RelativeLayout>
