<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/img_avatar_item_cmt"
    android:layout_alignParentTop="true"
    android:src="@drawable/ic_shopping_cart_black_24dp"
    android:layout_alignParentStart="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_name_item_cmt"
    android:layout_toEndOf="@+id/img_avatar_item_cmt"
    android:layout_alignParentTop="true"
    android:text="name"
    style="@style/value_style"
    android:layout_marginBottom="5dp"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_content_item_cmt"
    android:text="Ungws dungj cui bap, san pham xai gi dau toan bi loi khong udng su that, gia ca gi dau chan qua, noi chung la quan cha co cai gi car"
    android:layout_toEndOf="@id/img_avatar_item_cmt"
    android:layout_below="@id/txt_name_item_cmt"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_date_item_cmt"
        />
</RelativeLayout>
