<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.project.barcodechecker.fragments.ErrorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_error_frag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:text="Sự cố về mạng. Vui lòng thử lại"

            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_wifi_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_error_frag"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_portable_wifi_off_black_24dp" />

        <Button
            android:id="@+id/btn_reload_err_frag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_wifi_off"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Thử lại"
           style="@style/button_primary"
            />

    </RelativeLayout>
</FrameLayout>
